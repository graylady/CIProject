pipeline {
    agent  any
    tools {nodejs "node"}
       
    stages {
        stage ('Build') {
             stages{
                 stage ('install dependencies') { 
                    steps {
                      sh 'cd CIProject && npm install && cd ..' 
                       }
             }
                 stage('Build dist files') { 
                    steps {
                         sh 'cd CIProject && npm run build && cd ..' 
                    }
            
                }
            }
        }
        stage('Test') { 
            steps {
                sh 'cd CIProject && npm run test' 
               
            }
        }   
    }
}